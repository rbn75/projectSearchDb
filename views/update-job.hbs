  <div class="container add-job-wrapper">
      <div class="form-wrapper">
          <h1>Update Job</h1>
  
          <form name="update-form">
              <div class="form-group">
                  <label for="name">Job Description</label>
                  <input type="text" name="name" id="name" class="form-control">
              </div>
  
